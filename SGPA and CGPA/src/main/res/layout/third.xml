        android:layout_width="300px"
        android:layout_height="100px"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/nu6"
        android:layout_below="@+id/nu5"
        android:layout_alignLeft="@+id/nu5"
        android:layout_alignStart="@+id/nu5" />

    <EditText
        android:layout_width="300px"
        android:layout_height="100px"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/nu7"
        android:layout_below="@+id/nu6"
        android:layout_alignLeft="@+id/nu6"
        android:layout_alignStart="@+id/nu6" />

