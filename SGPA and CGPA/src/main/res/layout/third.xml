        android:layout_width="300px"
        android:layout_height="100px"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/nu8"
        android:layout_below="@+id/nu7"
        android:layout_alignLeft="@+id/nu7"
        android:layout_alignStart="@+id/nu7" />

    <EditText
        android:layout_width="300px"
        android:layout_height="100px"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/nu9"
        android:layout_alignBottom="@+id/num9"
        android:layout_alignLeft="@+id/nu8"
        android:layout_alignStart="@+id/nu8" />

</RelativeLayout>